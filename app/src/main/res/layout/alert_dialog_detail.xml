<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewDetail"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:background="@color/black"
        android:contentDescription="@string/product_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewDetailProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/null_value"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewDetail" />

    <TextView
        android:id="@+id/textViewDetailProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/null_value"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewDetail" />

    <TextView
        android:id="@+id/textViewDetailDescriptionShort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/null_value"
        app:layout_constraintStart_toStartOf="@+id/textViewDetailCategory"
        app:layout_constraintTop_toBottomOf="@+id/textViewDetailCategory" />

    <TextView
        android:id="@+id/textViewDetailDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="128dp"
        android:text="@string/null_value"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textViewDetailDescriptionShort"
        app:layout_constraintTop_toBottomOf="@+id/textViewDetailDescriptionShort" />

    <TextView
        android:id="@+id/textViewDetailCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/null_value"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textViewDetailProductName"
        app:layout_constraintTop_toBottomOf="@+id/textViewDetailProductName" />

    <TextView
        android:id="@+id/textViewDetailProductDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/null_value"
        app:layout_constraintStart_toEndOf="@+id/textViewDetailCategory"
        app:layout_constraintTop_toBottomOf="@+id/textViewDetailProductName" />

</androidx.constraintlayout.widget.ConstraintLayout>